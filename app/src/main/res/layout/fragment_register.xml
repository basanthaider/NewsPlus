<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create account."
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp"
        android:textSize="30dp"
        android:layout_marginStart="20dp"
        android:id="@+id/create"
        android:textColor="@color/meintGreen"
        android:fontFamily="sans-serif-black"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/please"
        android:textColor="#837C7C"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="@id/create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please enter your details to register"
        app:layout_constraintTop_toBottomOf="@id/create"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:background="@android:drawable/edit_text"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@+id/please"
        android:id="@+id/name"

        />
    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"

        android:layout_marginEnd="20dp"
        android:background="@android:drawable/edit_text"
        android:hint="Email"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@+id/name" />
    <EditText
        android:id="@+id/pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@android:drawable/edit_text"
        android:hint="Password"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@id/email" />
    <EditText
        android:id="@+id/number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@android:drawable/edit_text"
        android:hint="Mobile number"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@id/pass" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/register_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Register"
        app:cornerRadius="16dp"
        app:icon="@drawable/apply"
        app:iconGravity="textStart"
        android:backgroundTint="@color/orange"
        app:layout_constraintTop_toBottomOf="@id/number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/login_btn"
        android:layout_marginEnd="8dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/login_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Login"
        app:cornerRadius="16dp"
        app:icon="@drawable/login"
        app:iconGravity="textStart"
        app:layout_constraintTop_toBottomOf="@id/number"
        app:layout_constraintStart_toEndOf="@id/register_btn"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>